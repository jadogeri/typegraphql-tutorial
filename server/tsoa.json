{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*controller.ts"],
  "spec": {
    "outputDirectory": "src",
    "specVersion": 3,
    "name": "Ecommerce API",
    "description": "This is a sample Ecommerce server.  You can find out more about Swagger at [http://swagger.io](http://swagger.io) or on [irc.freenode.net, #swagger](http://swagger.io/irc/).",
    "version": "1.0.7",
    "termsOfService": "http://swagger.io/terms/",
    "license": {
      "name": "MIT License",
      "url": "opensource.org"
    },
    "contact": {
      "name": "Joseph Adogeri",
      "email": "johndoe@gmail.com",
      "url": "http://example.com"
    },
    "spec": { 
    "tags": [
      {
        "name": "Category",
        "description": "Operations related to categories."
      },
      {
        "name": "Order",
        "description": "Operations related to orders."
      },
      {
        "name": "Region",
        "description": "Operations related to regions."
      }
    ],
    "servers": [
      {
        "url": "https://typegraphql-tutorial.vercel.app",
        "description": "Production Server"
      },
      {
        "url": "https://test-api.vercel.app",
        "description": "Test/Staging Server"
      },
      {
        "url": "http://localhost:3000",
        "description": "Development Server (Local)"
      }
    ]
    }
  },
  "routes": {
    "esm": true,
    "routesDir": "src",
    "middleware": "express",
    "iocModule": "./src/configs/ioc.config.ts",
    "authenticationModule": "src/middlewares/authentication.middleware.ts"
    }
}