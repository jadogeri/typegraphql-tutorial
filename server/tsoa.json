{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*controller.ts"],
  "spec": {
    "outputDirectory": "src", 
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Enter your bearer token in the format \"Bearer {token}\"",
        "scopes": {
          "ADMIN": "Admin privileges",
          "USER": "User privileges"
        }
      }    
    },
    "name": "Ecommerce Project API",
    "description": "Ecommerce server API documentation.",
    "version": "1.0.7",
    "tags": [
      { "name": "Category", "description": "Category operations" },
      { "name": "Product", "description": "Product management" },
      { "name": "Order", "description": "Order management" }
    ],
    "servers": [
      { "url": "https://typegraphql-tutorial.vercel.app" }
    ]
  },
  "routes": {
    "esm": true,
    "routesDir": "src",
    "middleware": "express",
    "iocModule": "./src/configs/ioc.config.ts",
    "authenticationModule": "src/middlewares/authentication.middleware.ts"
  }
}
